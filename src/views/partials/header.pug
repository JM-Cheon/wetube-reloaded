header
    a(href="/").header__logo
        i.fab.fa-youtube
    nav
        ul
            li 
                a(href="/search") 
                    .fas.fa-search
            if loggedIn
                li 
                    a(href="/videos/upload") Upload Video
                li
                    a(href="/users/edit") Edit Profile
                li 
                    a(href="/users/logout") Logout
                li 
                    a(href=`/users/${loggedInUser._id}`)
                        if loggedInUser.avatarUrl === undefinded
                            img(src="/uploads/avatars/user.png").header_avatar
                        else
                            if loggedInUser.avatarUrl.includes("github")
                                img(src=loggedInUser.avatarUrl).header_avatar
                            else
                                img(src="/" + loggedInUser.avatarUrl).header_avatar


            else
                li 
                    a(href="/login") Login
                li 
                    a(href="/join").header__btn Join